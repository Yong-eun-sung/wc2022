<h1>데이터 처리</h1>
<script>
function max(arr) {
	maximum= 0
	for (k=0 ; k<arr.length; k++) {
		if ( maximum < arr[k]) {
			maximum=arr[k]
		}
	}
	return maximum
}
function min(arr) {
 mininum = 1000
  for (k=0 ; k<arr.length ; k++) {
    if ( mininum > arr[k]) {
     mininum=arr[k]
    }
}
return mininum
}
function sum(arr) {
total=0
for(k=0 ; k<arr.length ; k++) {
total += arr[k]
  }
  return total
}

data = prompt("공백으로 분리된 여러숫자 입력")
document.write(data + "<br>")
data1 = data.split(" ")
document.write(data1 + "<br>")
data2 = data1.map(Number)
document.write(data2 + "<br>")
maxnum = max(data2)
document.write("max number = " + maxnum + "<br>")
mininum = min(data2)
document.write("mini number = " + mininum + "<br>")
data_sum = sum(data2)
document.write("datasum = " + data_sum + "<br>")


</script>
</body>
</html>
